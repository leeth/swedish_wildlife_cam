{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Wildlife Pipeline Budget Configuration",
  "description": "Schema for validating budget configuration in Step Functions workflow",
  "properties": {
    "input_uri": {
      "type": "string",
      "format": "uri",
      "description": "S3 URI to input data",
      "pattern": "^s3://[a-zA-Z0-9.-]+/.+$"
    },
    "output_uri": {
      "type": "string",
      "format": "uri",
      "description": "S3 URI for output data",
      "pattern": "^s3://[a-zA-Z0-9.-]+/.+$"
    },
    "budget_dkk": {
      "type": "number",
      "minimum": 0.01,
      "maximum": 10000,
      "description": "Budget in Danish Kroner"
    },
    "use_spot": {
      "type": "boolean",
      "description": "Whether to use spot instances for cost savings"
    },
    "max_images": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50000,
      "description": "Maximum number of images to process"
    },
    "max_job_duration": {
      "type": "integer",
      "minimum": 300,
      "maximum": 14400,
      "description": "Maximum job duration in seconds"
    },
    "weather_days_back": {
      "type": "integer",
      "minimum": 1,
      "maximum": 365,
      "default": 7,
      "description": "Number of days to look back for weather data"
    },
    "session_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_]+$",
      "description": "Optional session identifier"
    }
  },
  "required": [
    "input_uri",
    "output_uri",
    "budget_dkk"
  ],
  "additionalProperties": false
}

